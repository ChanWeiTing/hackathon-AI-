bard = Bard(token= token, session=session)

def response_api(prompt):
    message = bard.get_answer(prompt)['content']
    return message

def user_input():
    input_text = str(input("Enter Your Prompt: "))
    return input_text

def chatbot(prompt):
    if prompt.lower() in ["quit", "exit", "bye"]:
        return 'quit'
    message = response_api(prompt)
    print(message)
    return message
